<div class="user-profile">
  <div class="text-center">
    <img src="<%= gravatar_url(@user, size: 100) %>" alt="" class="img-circle">
  </div>
  <div class="name text-center">
    <h1><%= @user.name %></h1>
  </div>
</div>
<ul class="nav nav-tabs nav-justified">
    <li class="<%= "active" if current_page?(user_path(@user)) %>"><%= link_to user_path(@user) do %>お知らせ<span claass="badge"></span><% end %></li>
    <li class="<%= "active" if current_page?(mylist_user_path(@user)) %>"><%= link_to mylist_user_path(@user) do %>マイリスト<span claass="badge"></span><% end %></li>
</ul>

